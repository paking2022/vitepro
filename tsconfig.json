{
  "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "lib": ["ESNext", "DOM"],
      "skipLibCheck": true,
      "noEmit": true,
      "allowJs": true,
      "baseUrl": ".",
      "types": [
          "unplugin-vue-define-options/macros-global",
          "unplugin-vue-define-options",
          "vite/client"
      ],
      "paths": {
          "third-lib": [
              "node_modules"
          ],
          "@/*": [
              "src/*"
          ]
      },
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
  ],
  "exclude": [
      "public/**/*",
      "node_modules",
      "vendor",
      "src/utils/api/**/*",
  ]
}
